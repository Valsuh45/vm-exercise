Vagrant.configure("2") do |config|
  # Use Ubuntu 22.04 LTS base box
  config.vm.box = "ubuntu/jammy64"

  # VM name and hostname
  config.vm.hostname = "vagrant-demo"

  # Private network so you can reach it from host if needed
  config.vm.network "private_network", ip: "192.168.56.10"

  # Provider settings (VirtualBox)
    config.vm.provider "virtualbox" do |vb|
    vb.name   = "vagrant-demo"
    vb.memory = 2048
    vb.cpus   = 2
  end

  # Shell provisioner using our script
  config.vm.provision "shell", path: "provision.sh"
end
